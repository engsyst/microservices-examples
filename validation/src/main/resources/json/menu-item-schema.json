{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://ua.nure.it/microservice/menu-item-schema.json",
  "title": "menuItem",
  "description": "Menu item structure",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 0
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "pattern": "^(?!\\s*$).+"
    },
    "price": {
      "type": "number",
      "minimum": 0,
      "exclusiveMinimum": true
    },
    "restaurant": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "minimum": 0
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "address": {
          "type": "string",
          "minLength": 1
        },
        "isOpen": {
          "type": "boolean"
        }
      },
      "required": [
        "id",
        "name",
        "address",
        "isOpen"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "id",
    "name",
    "price",
    "restaurant"
  ],
  "additionalProperties": false
}