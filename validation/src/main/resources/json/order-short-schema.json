{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://ua.nure.it/microservice/order-schema.json",
  "title": "Order",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer"
    },
    "menuItemIds": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "integer",
        "minimum": 1
      }
    },
    "totalPrice": {
      "type": "number",
      "minimum": 0.01
    },
    "deliveryAddress": {
      "type": "string",
      "minLength": 5
    },
    "orderStatus": {
      "type": "string",
      "enum": [
        "PENDING",
        "PAID",
        "DELIVERED_AND_PAID"
      ]
    },
    "paymentId": {
      "type": "integer"
    }
  },
  "required": [
    "id",
    "menuItemIds",
    "totalPrice",
    "deliveryAddress",
    "orderStatus",
    "paymentId"
  ]
}