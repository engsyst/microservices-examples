{
  "$schema": "https://json-schema.org/draft/2020-12/schema#",
  "$id": "http://ua.nure.it/microservice/restaurant-schema.json",
  "title": "restaurant",
  "description": "Restaurant structure",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 0
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "address": {
      "type": "string",
      "minLength": 1
    },
    "isOpen": {
      "type": "boolean"
    }
  },
  "required": [
    "id",
    "name",
    "address",
    "isOpen"
  ],
  "additionalProperties": false
}
